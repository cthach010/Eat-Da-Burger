<div class="container bg"></div>
    <div class="col-md-4">
        <h1>Eat-Da-Burger App</h1>
    </div>


<div class="row">
	 <div class="col-sm-6">

		<br>
	<h2>Burgers that are available!</h2>

    <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
             <li>
	    {{this.id}}
        {{this.burger_name}}

	    <form action="/{{this.id}}?_method=PUT" method="POST">
			    <input type="hidden" name="devoured" value="true">
			     <button class="devouredButton" type="submit">Yummy!</button>
		</form>

             </li>
        {{/unless}}
        {{/each}}
    </ul>

    </div>

    <div class="col-sm-6"></div> 

 	<h2>All the burgers that have been eaten!</h2>
    <ul>
         {{#each burgers}}
	    {{#if this.devoured}}
            <li>
	    {{this.id}}
	    {{this.burger_name}}

            </li>
        {{/if}}
	    {{/each}}
     </ul>   
</div>	

    <div class="row">
	    <div class="col-sm-6">


     <form class="create-update-form" action="/" method="POST"></form>
<div class="form-group">
		    <h3>Just enter a desired burger and click submit. </h3>
		        <input type="text" id="add" name="burger_name">
</div>
        <button class="devouredButton" type="submit">Submit Order</button>
	    </div>
    </div>
    